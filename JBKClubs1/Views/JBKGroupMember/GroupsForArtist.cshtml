@model IEnumerable<JBKClubs1.Models.GroupMember>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = $"Groups with {Context.Session.GetString("artistName")}";
}

<h1>@ViewData["Title"]</h1>
<p>
    <a asp-action="Create">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArtistIdGroupNavigation.NameAddress.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateJoined)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateLeft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArtistIdGroupNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArtistIdMemberNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ArtistIdGroupNavigation.NameAddress.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateJoined)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateLeft)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArtistIdGroupNavigation.ArtistId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArtistIdMemberNavigation.ArtistId)
                </td>
                <td>
                    <a asp-action="index" asp-controller="JBKGroupMember">GroupMember</a>
                    @Html.ActionLink("Edit", "Edit", new { memberId = item.ArtistIdMemberNavigation.ArtistId, groupId = item.ArtistIdGroupNavigation.ArtistId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ArtistIdGroupNavigation.ArtistId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ArtistIdGroupNavigation.ArtistId })
                </td>
            </tr>
        }
    </tbody>
</table>