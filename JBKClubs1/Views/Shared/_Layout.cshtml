<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FOOTJBKClubs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src="~/foot and sport favicon.png" style="height:100px"/>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FOOTJBKClubs</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                                <li>
                                    <a class="nav-link text-dark" asp-controller="JBKCountry" asp-action="Index">Country</a>
                                </li>
                        @if (User.IsInRole("administrators"))
                        {
                            <li class="dropdown">
                                <a class="dropdown-toggle nav-link text-dark" data-toggle="dropdown" href="#">
                                    User/Role Administration<span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="text-dark" asp-controller="JBKRole" asp-action="Index">
                                            Manage Roles
                                        </a>
                                    </li>
                                    <li>
                                        <a class="text-dark" asp-controller="JBKRole" asp-action="AddUser">
                                            Manage Users
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <span style="font-weight:bold; color:red">@TempData["message"]</span>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <span style="float:left; width:200px"><a href="mailto:Jkim4548@conestogac.on.ca">&copy;Junbeom Kim</a>   -Section 1</span>
            <span style="float:right; width:200px">
                <span style="float:right"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a> &nbsp;<a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></span>
            </span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>  
    @RenderSection("Scripts", required: false)
</body>
</html>
